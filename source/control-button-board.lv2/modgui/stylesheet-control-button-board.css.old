/* = GLOBAL
================================================ */
.control-button-board * {
    color: white !important;
}

/* = HIDE UNNECESSARY ELEMENTS
================================================ */
.control-button-board .mod-plugin-name,
.control-button-board .mod-plugin-author {
    color: #ffffff !important;
    background: #222;
    font-family: monospace;
    text-align: right;
    border: 1px inset #555;
    height: 20px;
    width: 100px;
    overflow: hidden;
}

/* = CONTAINER
================================================ */
.control-button-board {
    /*background-image: url(/resources/back.png{{{ns}}}) !important;*/
    background-size: 400px 700px;
    background-repeat: no-repeat;
    width: 400px;
    height: 700px;
    position: relative;
}

/* = CONTROL GROUP POSITION
================================================ */
.control-button-board .mod-toggle-group {
    top: 133px;
    left: 40px;
    position: absolute;
}

.control-button-board .mod-toggle-group .mod-control-group {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 10px; /* Adjust spacing between pairs if needed */
    /*top: 133px;
    left: 61px;*/
    position: relative;
}


/* = CONTROL IMAGE
================================================ */
.control-button-board .mod-control-image {
    background-image: url(/resources/switch.png{{{ns}}});
    background-position: left center;
    background-repeat: no-repeat;
    background-size: 300px 40px;
    cursor: pointer;
    height: 51px;
    width: 150px;
    margin-bottom: 8px; /* Adjust spacing within pairs if needed */
    position: relative;
    overflow: hidden;
}

/* = LIGHT ON/OFF POSITION
================================================ */
.control-button-board .mod-light {
    position: relative;
}

/* = KNOB VALUE
================================================ */
.control-button-board .mod-knob-value {
    color: #84ff00 !important;
    background: #222;
    font-family: monospace;
    text-align: right;
    margin: 5px 0 52px 0;
    border: 1px inset #555;
    display: block;
    height: 20px;
    width: 100px;
    overflow: hidden;
}

/* = FOOTSWITCH
================================================ */
.control-button-board .mod-footswitch.on {
    background-position: top center;
}

.control-button-board .mod-footswitch.off {
    background-position: bottom center;
}

/* = PEDAL INPUT/OUTPUT POSITION
================================================ */
.control-button-board .mod-pedal-input {
    top: 212px;
}

.control-button-board .mod-pedal-output {
    top: 124px;
}

.control-button-board .mod-pedal-output>* {
    margin-bottom: 3px !important;
}

